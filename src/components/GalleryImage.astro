---
const { src, alt } = Astro.props;
---

<div class="img-wrapper">
  <img class="gallery-img" src={src} alt={alt} />
</div>

<style>
  .img-wrapper {
    width: 100%;
    border-radius: 10px;
    aspect-ratio: 1 / 1;
    transition: transform 0.2s;
    overflow: hidden;
  }

  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .img-wrapper:hover {
    cursor: pointer;
    transform: scale(0.98);
  }

  .img-wrapper:active {
    transform: scale(0.96);
  }

  @media (min-width: 43rem) {
    .img-wrapper {
      border-radius: 12px;
    }
  }

  @media (min-width: 62rem) {
    .img-wrapper {
      border-radius: 16px;
    }
  }
</style>
