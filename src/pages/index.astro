---
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import CountDown from '../components/CountDown.jsx';
import Footer from '../components/Footer.astro';
import Gallery from '../components/Gallery.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="DELTA">
  <main>
    <div class="wrapper">
      <img src="/assets/logo.png" alt="Logo" class="logo" />
      <div class="banner">
        <div class="overlay">
          <div>
            <h1>DELTA</h1>
            <h2 class="subtitle">WYJAZD SZKOLENIOWO-INTEGRACYJNY</h2>
          </div>
          <div class="center">
            <CountDown client:only="solid-js" />
            <div class="card">
              <ul class="list">
                <Card
                  icon={{
                    src: '/assets/icons/wallet.png',
                    alt: 'wallet icon',
                  }}
                  title="KOSZT WYJAZDU"
                  value="350zł"
                />
                <Card
                  icon={{
                    src: '/assets/icons/location.png',
                    alt: 'location icon',
                  }}
                  title="LOKALIZACJA"
                  value="Ośrodek Marysieńka"
                />
                <Card
                  icon={{
                    src: '/assets/icons/calendar.png',
                    alt: 'calendar icon',
                  }}
                  title="TERMIN"
                  value="20-23 października"
                />
                <Card
                  icon={{
                    src: '/assets/icons/people.png',
                    alt: 'people icon',
                  }}
                  title="LICZBA MIEJSC"
                  value="80"
                />
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <Gallery />
    <CallToAction />
  </main>
  <Footer />
</Layout>

<style>
  h1,
  h2,
  h3 {
    text-shadow: 0px 8px 24px rgba(0, 0, 0, 0.15);
  }

  h1 {
    font-weight: 800;
    text-align: center;
  }

  h2 {
    font-weight: 400;
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .list {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .subtitle {
    margin: 0;
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 100px;
    padding-bottom: 150px;
  }

  .logo {
    margin: calc(2 * var(--margin-top)) 0;
    height: 10vh;
  }

  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .banner {
    height: 72vh;
    width: 78vw;
    border-radius: clamp(10px, 2vw, 40px);
    background-image: url('/assets/banner.svg');
    background-position: center;
    background-size: cover;
    position: relative;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    color: white;
  }

  .count-down {
    font-size: 36px;
  }

  .card {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.15);
    border-radius: clamp(10px, 2vw, 40px);
    height: 14vh;
    width: 62.5vw;
    display: flex;
    justify-content: center;
    color: #300f06;
    margin-top: calc(var(--margin-top) + 1vw);
    margin-bottom: -7vh;
  }

  ul {
    margin: 0;
    padding: 0;
  }

  @media (max-width: 768px) {
    .card {
      width: 70vw;
    }

    .list {
      flex-wrap: wrap;
    }

    .card {
      width: 88vw;
      height: 28vh;
      margin-bottom: -32vh;
      margin-top: 6.5vh;
    }

    .list {
      padding: 10px;
    }

    .banner {
      height: 40vh;
      width: 88vw;
    }

    .logo {
      margin: calc(3 * var(--margin-top)) 0;
    }
  }

  @media (max-width: 425px) {
    .list {
      padding: 20px;
    }

    .banner {
      background-image: url('/assets/banner_mobile.svg');
    }
  }
</style>
