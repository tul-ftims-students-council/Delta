---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import CountDown from "../components/CountDown.jsx";
---

<Layout title="DELTA">
  <main>
    <img src="/assets/logo.svg" alt="Logo" class="logo" />
    <div class="banner">
      <div class="overlay">
        <div>
          <h1>DELTA</h1>
          <h2 class="subtitle">WYJAZD SZKOLENIOWO-INTEGRACYJNY</h2>
        </div>
        <div class="center">
          <CountDown client:load />
          <div class="card">
            <ul class="list">
              <Card
                icon={{
                  src: "/assets/icons/wallet.png",
                  alt: "wallet icon",
                }}
                title="KOSZT"
                value="350zł"
              />
              <Card
                icon={{
                  src: "/assets/icons/location.png",
                  alt: "location icon",
                }}
                title="LOKALIZACJA"
                value="Ośrodek Marysieńka"
              />
              <Card
                icon={{
                  src: "/assets/icons/calendar.png",
                  alt: "calendar icon",
                }}
                title="TERMIN"
                value="20-23 października"
              />
              <Card
                icon={{
                  src: "/assets/icons/people.png",
                  alt: "people icon",
                }}
                title="LICZBA MIEJSC"
                value="90"
              />
            </ul>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  h1,
  h2,
  h3 {
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  }

  .list {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .subtitle {
    margin: 0;
  }

  main {
    height: 100vh;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .logo {
    margin: calc(2 * var(--margin-top)) 0;
    height: 10vh;
  }

  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .banner {
    height: 72vh;
    width: 78%;
    border-radius: 40px;
    background-image: url(/assets/banner.svg);
    background-position: center;
    background-size: cover;
    position: relative;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    color: white;
  }

  .count-down {
    font-size: 36px;
  }

  .card {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.15);
    border-radius: 40px;
    height: 14vh;
    width: 62.5vw;
    display: flex;
    justify-content: center;
    color: #300f06;
    margin-top: calc(var(--margin-top) + 5px);
    margin-bottom: -7vh;
  }
</style>
